
@{
    ViewData["Title"] = "Index";
}
@model vms.Models.OpportunityViewModel


<h2>Index</h2>

<div class="panel panel-default">
    <div class="panel-heading">ViewData["Title"]</div>
</div> 

<div class="text-center">
    <a asp-controller="Opportunity" asp-action="Create" class="btn btn-primary">Add</a>
</div>

<table class-"table table-hover">
    <thead>
        <tr>
            <td>Name</td>
            <td>Center</td>
        </tr>
    </thead>

    @foreach (var item in Model.Opportunities)
    {
        <tr>
          
            <td>
                @item.Name
            </td>
            <td>
                @item.Center
            </td>
            <td>
                <form asp-action="Delete" asp-controller="Opportunity" method="post">
                <a asp-action="Edit" asp-controller="Opportunity" asp-route-Id="@item.Id"> Edit</a>
                    <input type="hidden" name="Id" value="@item.Id"/>
                    <button type="submit" class="btn btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }

</table>

